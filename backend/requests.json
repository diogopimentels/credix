{
    "info": {
        "name": "CrediMestre API",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Users",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"Admin User\",\n    \"email\": \"admin@credimestre.com\",\n    \"password\": \"123456\",\n    \"role\": \"admin\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users"
                            ]
                        }
                    }
                },
                {
                    "name": "Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"admin@credimestre.com\",\n    \"password\": \"123456\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/users/sessions",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "users",
                                "sessions"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Clients",
            "item": [
                {
                    "name": "Create Client",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"name\": \"John Doe\",\n    \"phone\": \"11999999999\",\n    \"address\": \"Rua Exemplo, 123\",\n    \"photoUrl\": \"https://github.com/diego3g.png\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/clients",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "clients"
                            ]
                        }
                    }
                },
                {
                    "name": "List Clients",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/clients",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "clients"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Loans",
            "item": [
                {
                    "name": "Create Loan",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"clientId\": \"CLIENT_ID_HERE\",\n    \"principal\": 1000,\n    \"dueDate\": \"2023-12-31T00:00:00.000Z\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/loans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "loans"
                            ]
                        }
                    }
                },
                {
                    "name": "List Loans",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/loans",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "loans"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Payments",
            "item": [
                {
                    "name": "Register Payment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"loanId\": \"LOAN_ID_HERE\",\n    \"amount\": 500\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/payments",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "payments"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Dashboard",
            "item": [
                {
                    "name": "Get Summary",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/dashboard",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "dashboard"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3333"
        },
        {
            "key": "token",
            "value": "YOUR_JWT_TOKEN"
        }
    ]
}